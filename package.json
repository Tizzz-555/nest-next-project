{
  "name": "nest-next-project",
  "private": true,
  "version": "0.1.0",
  "description": "Full-stack monorepo: NestJS gateway + authentication (TCP) + Next.js frontend",
  "license": "MIT",
  "scripts": {
    "build": "nest build gateway && nest build authentication",
    "start:gateway": "nest start gateway",
    "start:gateway:dev": "nest start gateway --watch",
    "start:authentication": "nest start authentication",
    "start:authentication:dev": "nest start authentication --watch",
    "start:dev": "concurrently -n gateway,authentication -c blue,magenta \"npm run start:gateway:dev\" \"npm run start:authentication:dev\""
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/microservices": "^11.0.0",
    "@nestjs/mongoose": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/swagger": "^11.0.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "jose": "^6.0.0",
    "mongoose": "^8.10.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@types/node": "^20.11.30",
    "@types/bcryptjs": "^2.4.6",
    "concurrently": "^9.1.0",
    "typescript": "^5.6.3"
  }
}

